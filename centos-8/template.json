{
"builders": [
{
  "type": "virtualbox-iso",
"boot_command": [
  "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
],
"boot_wait": "10s",
"disk_size": 20000,
"guest_os_type": "RedHat_64",
"headless": true,
"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
"http_directory": "http",
"iso_checksum": "sha256:47ab14778c823acae2ee6d365d76a9aed3f95bb8d0add23a06536b58bb5293c0",
"iso_url": "http://mirror.ox.ac.uk/sites/mirror.centos.org/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-minimal.iso",
"ssh_username": "vagrant",
"ssh_password": "vagrant",
"ssh_port": 22,
"ssh_wait_timeout": "10000s",
"shutdown_command": "echo vagrant|sudo -S /sbin/halt -h -p",
"vboxmanage": [
  [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
  [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
]
}],
"provisioners": [
      {
        "type": "shell",
        "execute_command": "echo vagrant|sudo -S sh {{.Path}}",
        "override": {
          "virtualbox-iso": {
            "scripts": [
              "scripts/base.sh",
              "scripts/vagrant.sh",
              "scripts/virtualbox.sh",
              "scripts/provision.sh",
              "scripts/cleanup.sh",
              "scripts/zerodisk.sh"
            ]
          }
        }
      }
      ],
"post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "centos-8-x64-virtualbox.box"
        }
      }
    }
  ]
}

