{
"builders": [
{
  "type": "virtualbox-iso",
"boot_command": [
  "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
],
"boot_wait": "10s",
"disk_size": 20000,
"guest_os_type": "RedHat_64",
"headless": true,
"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
"http_directory": "http",
"iso_checksum": "sha256:659691c28a0e672558b003d223f83938f254b39875ee7559d1a4a14c79173193",
"iso_urls": [
  "CentOS-7-x86_64-Minimal-2003.iso",
  "http://mirror.cwcs.co.uk/centos/7.8.2003/isos/x86_64/CentOS-7-x86_64-Minimal-2003.iso"
],
"ssh_username": "vagrant",
"ssh_password": "vagrant",
"ssh_port": 22,
"ssh_wait_timeout": "10000s",
"shutdown_command": "echo vagrant|sudo -S /sbin/halt -h -p",
"vboxmanage": [
  [ "modifyvm", "{{.Name}}", "--memory", "4048" ],
  [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
]
}],
"provisioners": [
      {
        "type": "shell",
        "execute_command": "echo vagrant|sudo -S sh {{.Path}}",
        "override": {
          "virtualbox-iso": {
            "scripts": [
              "scripts/base.sh",
              "scripts/vagrant.sh",
              "scripts/virtualbox.sh",
              "scripts/provision.sh",
              "scripts/cleanup.sh",
              "scripts/zerodisk.sh"
            ]
          }
        }
      }
      ],
"post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "centos-7-x64-virtualbox.box"
        }
      }
    }
  ]
}

